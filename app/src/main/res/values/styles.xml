<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_grey</item> <!--colorPrimary-->
        <item name="colorPrimaryDark">@color/material_greyDark</item>  <!--colorPrimaryDark-->
        <item name="colorAccent">@color/colorAccent</item> <!--colorAccent-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/material_grey</item> <!--colorPrimary-->
        <item name="colorPrimaryDark">@color/material_greyDark</item>  <!--colorPrimaryDark-->
        <item name="colorAccent">@color/colorAccent</item> <!--colorAccent-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/material_grey</item> <!--colorPrimary-->
        <item name="colorPrimaryDark">@color/material_greyDark</item>  <!--colorPrimaryDark-->
        <item name="colorAccent">@color/colorAccent</item> <!--colorAccent-->
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/material_indigo</item>
        <item name="colorButtonNormal">@color/material_blue</item>
    </style>

</resources>
